#!/usr/bin/perl -w

use Cwd;
my $dir = getcwd;

system("make", "apply");

chdir("nginx");

my @args = ("--builddir=${dir}/objs");

open(MODULES, "${dir}/modules/enable");
my @modules = map {"--add-module=\"${dir}/modules/$_\""} grep {/^#/} <MODULES>;
close(MODULES);

@args = (@args, @modules, @ARGV);

system("./configure", @args);
